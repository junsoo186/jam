<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jam.repository.interfaces.TagRepository">

    <!-- 태그 삽입 -->
    <insert id="insertTag" parameterType="com.jam.repository.model.Tag">
        INSERT INTO tag_tb (tag_name)
        VALUES (#{tagName})
    </insert>

    <!-- 태그 조회 -->
    <select id="selectTagById" parameterType="int" resultType="com.jam.repository.model.Tag">
        SELECT tag_id, tag_name
        FROM tag_tb
        WHERE tag_id = #{tagId}
    </select>

    <!-- 모든 태그 조회 -->
    <select id="selectAllTags" resultType="com.jam.repository.model.Tag">
        SELECT tag_id, tag_name
        FROM tag_tb
    </select>

</mapper>
