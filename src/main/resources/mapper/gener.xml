<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jam.repository.interfaces.GenreRepository">

    <!-- 장르 삽입 -->
    <insert id="insertGenre" parameterType="com.jam.repository.model.Genre">
        INSERT INTO genre_tb (genre_name)
        VALUES (#{genreName})
    </insert>

    <!-- 장르 조회 -->
    <select id="selectGenreById" parameterType="int" resultType="com.jam.repository.model.Genre">
        SELECT genre_id, genre_name
        FROM genre_tb
        WHERE genre_id = #{genreId}
    </select>

    <!-- 모든 장르 조회 -->
    <select id="selectAllGenres" resultType="com.jam.repository.model.Genre">
        SELECT genre_id, genre_name
        FROM genre_tb
    </select>

</mapper>
